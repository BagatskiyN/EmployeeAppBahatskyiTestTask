@using Presentation.Models.Requests
@using Presentation.Models

@model UpdateEmployeeRequest

@{
    ViewBag.Title = "Edit Employee";
}

<h2>Edit Employee</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Department</label>
        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments"></select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Programming Languages</label>
        <select asp-for="ProgrammingLanguageIds" class="form-control" asp-items="ViewBag.ProgrammingLanguages" multiple></select>
        <span asp-validation-for="ProgrammingLanguageIds" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



